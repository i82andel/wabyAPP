                        android:layout_marginTop="20dp"
                        android:checkable="true"
                        android:text="videojuegos"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
